<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wind.dataBase.mybatis.mapper.TeacherMapper">

    <select id="selectList" resultType="com.wind.dataBase.mybatis.entity.Teacher">
        select id,name,subject,age,create_date as createDate from teacher
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test = "name !=null and name !=''">
                <bind name="namePattern" value="'%'+name+'%'"/>
                and name = #{name}
            </if>
            <if test = "subject !=null and subject !='' ">
                and subject = #{subject}
            </if>
        </where>
    </select>

    <select id="selectList2" resultType="com.wind.dataBase.mybatis.entity.Teacher">
        select id,name,subject,age,create_date as createDate from teacher
        <trim prefix="where" prefixOverrides="and |or">
            <if test="id != null">
                and id = #{id}
            </if>
            <if test = "name !=null and name !=''">
                <bind name="namePattern" value="'%'+name+'%'"/>
                and name like #{namePattern}
            </if>
            <if test = "subject !=null and subject !='' ">
                and subject = #{subject}
            </if>
        </trim>
    </select>

    <select id="selectById" resultType="com.wind.dataBase.mybatis.entity.Teacher">
        select id,name,subject,age,create_date as createDate from teacher
        where id=#{id}
    </select>

    <select id="selectCount" resultType="java.lang.Long">
        select count(0) from teacher
    </select>

    <insert id="insert" >
        insert into teacher
        (
         name,
         subject,
         age,
         create_date
        )
        values
        (
         #{name},
         #{subject},
         #{age},
         #{createDate}
        )
    </insert>

    <update id="updateById">
        update teacher
        <set>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="name!=null and name!=''">
                name = #{name},
            </if>
            <if test="subject!=null and subject!=''">
                subject = #{subject},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
        </set>
        where id=#{id}
    </update>

    <update id="updateById2">
        update teacher
        <trim prefix="set" suffixOverrides=",">
            <if test="age != null">
                age = #{age},
            </if>
            <if test="name!=null and name!=''">
                name = #{name},
            </if>
            <if test="subject!=null and subject!=''">
                subject = #{subject},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
        </trim>
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete from teacher where id=#{id}
    </delete>


</mapper>